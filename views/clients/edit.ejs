<% include forms/header %>

  <div class="back-link">
    <a href="/clients/<%=client.id%>" class="btn btn-primary">Back</a>
  </div>
  <div class="register-container animate-panel">
    <div class="row">
      <div class="col-md-12">
        <div class="text-center m-b-md">
          <h3>Edit Client</h3>
        </div>
        <div class="hpanel">
          <div class="panel-body">
            <form action="/clients/<%=client.id%>?_method=PUT" id="loginForm" method="POST">
              <div class="row">
                <div class="form-group col-lg-6">
                  <label>Email</label>
                  <input type="" value="<%=client.email%>" id="" class="form-control" name="email" required>
                </div>
                <div class="form-group col-lg-6">
                  <label>First Name</label>
                  <input type="" value="<%=client.first_name%>" id="" class="form-control" name="first_name" required>
                </div>
                <div class="form-group col-lg-6">
                  <label>Last Name</label>
                  <input type="" value="<%=client.last_name%>" id="" class="form-control" name="last_name" required>
                </div>
                <div class="form-group col-lg-6">
                  <label>Username</label>
                  <input type="" value="<%=client.username%>" id="" class="form-control" name="username" required>
                </div>
                <div class="form-group col-lg-4">
                  <label>Avatar</label>
                  <input type="" value="<%=client.avatar%>" id="" class="form-control" name="avatar" required>
                </div>
                <div class="form-group col-lg-4">
                  <label>Password</label>
                  <input type="password" id="" class="form-control" name="password" required>
                </div>

                <% if (clients_project === undefined){%>
                  <div class="btn-group col-lg-4">
                    <br>
                    <select name="project" required>
                                  <option disabled selected>Unassigned</option>
                                  <% projects.forEach(function (project) { %>
                                  <option value="<%=project.id%>"><%=project.name%></option>
                                  <% }) %>
                              </select>
                  </div>

                  <% }else{ %>

                    <div class="btn-group col-lg-4">
                      <br>
                      <select name="project" required>
                                  <option disabled selected><%=clients_project.name%></option>
                                  <% projects.forEach(function (project) { %>
                                  <option value="<%=project.id%>"><%=project.name%></option>
                                  <% }) %>
                              </select>
                    </div>
                    <% } %>


              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-success">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 text-center">
        <strong>Deloitte-Innowake Code Mining</strong> <br/> Migration Analytics - Simplified <br/> 2018
      </div>
    </div>
  </div>

  <% include forms/footer %>
